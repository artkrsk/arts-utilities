{
  "name": "arts/utilities",
  "description": "A comprehensive collection of utility methods for WordPress theme and plugin development, with a focus on Elementor integration.",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Artem Semkin",
      "email": "me@artemsemkin.com"
    }
  ],
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpstan/phpstan": "^2.0",
    "squizlabs/php_codesniffer": "^3.13.4",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Arts\\Utilities\\": "src/php/"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=phpcs.xml",
    "phpcbf": "phpcbf --standard=phpcs.xml",
    "phpstan": "phpstan analyse --memory-limit=1G",
    "phpstan:baseline": "phpstan analyse --memory-limit=1G --generate-baseline",
    "fix": "@phpcbf",
    "check": [
      "@phpcs",
      "@phpstan"
    ]
  }
}
